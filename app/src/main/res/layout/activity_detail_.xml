<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Detail_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_imageurlDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            tools:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/tv_tfvnameDetailLabel"
            style="@style/DetailStyles"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tfvnameDetail"
            style="@style/DetailStyles"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="5dp"
            android:text="Braga Dijon"
            android:textSize="16sp" />

        <TextView
            style="@style/DetailStyles"
            android:text="Name Detail"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_botnameDetail"
            style="@style/DetailStyles"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="5dp"
            android:text="dijoncavalcante@gmail.com"
            android:textSize="16sp" />

        <TextView
            style="@style/DetailStyles"
            android:text="Other Name Detail"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_othnameDetail"
            style="@style/DetailStyles"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="5dp"
            android:text="dijoncavalcante@gmail.com"
            android:textSize="16sp" />

        <TextView
            style="@style/DetailStyles"
            android:text="Climate Detail"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_climateDetail"
            style="@style/DetailStyles"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="5dp"
            android:text="dijoncavalcante@gmail.com"
            android:textSize="16sp" />

        <TextView
            style="@style/DetailStyles"
            android:lineSpacingExtra="5dp"
            android:text="Description Detail"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_descriptionDetail"
            style="@style/DetailStyles"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="5dp"
            android:text="dijoncavalcante@gmail.com"
            android:textSize="16sp" />

        <TextView
            style="@style/DetailStyles"
            android:text="Health Detail"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_healthDetail"
            style="@style/DetailStyles"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="5dp"
            android:text="dijoncavalcante@gmail.com"
            android:textSize="16sp" />


        <TextView
            style="@style/DetailStyles"
            android:lineSpacingExtra="5dp"
            android:text="Propagation Detail"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_propagationDetail"
            style="@style/DetailStyles"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="5dp"
            android:text="dijoncavalcante@gmail.com"
            android:textSize="16sp" />

        <TextView
            style="@style/DetailStyles"
            android:lineSpacingExtra="5dp"
            android:text="Soil Detail"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_soilDetail"
            style="@style/DetailStyles"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="5dp"
            android:text="dijoncavalcante@gmail.com"
            android:textSize="16sp" />

        <TextView
            style="@style/DetailStyles"
            android:lineSpacingExtra="5dp"
            android:text="Uses Detail"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_usesDetail"
            style="@style/DetailStyles"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="5dp"
            android:text="dijoncavalcante@gmail.com"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>